<?xml version="1.0" encoding="utf-8"?>
<?xml-model href="../../SceneData/ScreenplaySchema.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<screenplay>
    <block name="start">
        <!-- [We’re back at Cato’s house. It’s just past sunset outside, the lights glow golden light, 
            Cato’s packing his bags while Cera is putting some last things away inside the house.]-->
        <setCharacterAnimation idleLoop="true"><character>Cato</character><animation>Fiddle with Object Sit</animation></setCharacterAnimation>
        <setCharacterAnimation idleLoop="true"><character>Cera</character><animation>Idle Left</animation></setCharacterAnimation>
        <beat>1.5</beat>
        <setCharacterAnimation concurent="true" idleLoop="true"><character>Cato</character><animation>Look Behind Sit</animation></setCharacterAnimation>
        <line><speaker>Cato</speaker>Oh, mom, I almost forgot something.</line>
        <setCharacterAnimation idleLoop="true"><character>Cera</character><animation>Idle Right</animation></setCharacterAnimation>
        <beat>0.3</beat>
        <setCharacterAnimation concurent="true"><character>Cato</character><animation>Show Object Sit</animation></setCharacterAnimation>
        <line><speaker>Cato</speaker>We got a letter. Someone actually flagged me down and gave it to me when I was leaving the Post Office...</line>
        <characterMove character="Cera">Beside Cato</characterMove>
        <setCharacterAnimation idleLoop="true"><character>Cera</character><animation>Idle Left</animation></setCharacterAnimation>
        <!--<setCharacterAnimation><character>Cera</character><animation>Take Letter</animation></setCharacterAnimation>-->
        <setCharacterAnimation idleLoop="true"><character>Cato</character><animation>Idle Sit</animation></setCharacterAnimation>
        <line autoProceed="true"><speaker>Cera</speaker>Wonder what was so-</line>
        <envAnimation>Distant Boom</envAnimation>
        <setCharacterAnimation><character>Cato</character><animation>Freeze</animation></setCharacterAnimation>
        <setCharacterAnimation><character>Cera</character><animation>Ready for Battle</animation></setCharacterAnimation>
        <line><speaker>Cera</speaker>Cato: watch the house.</line>
        <characterMove character="Cera">Door By Coat Rack</characterMove>
        <setCharacterAnimation><character>Cera</character><animation>Grab Spear</animation></setCharacterAnimation>
        <setCharacterAnimation><character>Cato</character><animation>Stand Up and Draw Sword</animation></setCharacterAnimation>
        <line><speaker>Cera</speaker>I'm going to find whatever that is...</line>
        <setCharacterAnimation><character>Cato</character><animation>Nod</animation></setCharacterAnimation>
        <beat>1</beat>
        <setCharacterAnimation><character>Cato</character><animation>Look Around</animation></setCharacterAnimation>
        <smashCut>
            <cameraCut transition="cut">Cato Anxiety Shot</cameraCut>
            <characterAnimationChange><character>Cato</character><animation>Anxious Pacing</animation></characterAnimationChange>
            <characterTeleport character="Cato">Pacing Blocking Mark</characterTeleport>
            <!-- Need to add in some node enables/disables for lighting-->
        </smashCut>
        <END><GOTO>EXIT</GOTO></END>
    </block>
</screenplay>